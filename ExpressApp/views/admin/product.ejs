<div class="container allCon">

    <h2 class="text-center">Product Details: <%= product.title %>
    </h2>
    
    <div class="mt-4 item">
        <div class="col-6 col-md-4 col-lg-3 mx-auto mb-2 mt-4 d-flex justify-content-center">
            <div class="card h-100 text-center">
                <img src="/uploads/<%= product.picture %>" class="img-fluid mx-auto d-block" alt="<%= product.title %>">
                <div class="card-body">
                    <h5 class="card-title"><%= product.title %></h5>
                    <p class="text-muted mb-1">
                        <%= product.category %>
                    </p>
                    <p class="card-text">
                        <%= product.description %>
                    </p>
                    <h6 class="price">Rs <%= product.price %>
                    </h6>
                    <h6 class="quantity price"> <span class="text-black">Quantity: </span>
                        <%= product.quantity %>
                    </h6>
                </div>
            </div>
        </div>
        <a href="/admin/products" class="btn btn-primary mt-3 p-2">Back to Product List</a>
    </div>
</div>