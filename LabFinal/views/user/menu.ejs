<section class="menu-section">
    <div class="container-fluid">
        <!-- Menu Title -->
        <h1 class="menu-title text-center"><%= pageTitle %></h1>
        <!-- Menu Items -->
        <div class="row justify-content-center">
            <% categories.forEach(category => { %>
                <div class="col-6 col-sm-4 col-md-3 col-lg-1 col-xl-1 menu-item">
                    <div class="menu-item-content">
                        <img src="/assets/icon<%= category %>.png" class="menu-item-img" alt="<%= category %>">
                        <div class="menu-item-text">
                            <span><%= category %></span>
                            <span class="product-count"><%= products.filter(product => product.category === category).length %> Products</span>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>

<div class="container-fluid content">
    <div class="row">
        <!-- Left Content Wrapper -->
        <div class="col-12 col-lg-8">
            <div class="content-section">
                <!-- Placeholder for Main Content -->
                <div>
                    <div class="container-fluid mt-5">
                        <div class="row product">
                            <% products.forEach(product => { %>
                                <div class="col-12 col-md-8 col-lg-4 mb-4">
                                    <div class="card product-card h-100">
                                        <img src="/uploads/<%= product.picture %>" class="card-img-top" alt="<%= product.title %>">
                                        <div class="card-body text-center">
                                            <h5 class="card-title mb-2"><%= product.title %></h5>
                                            <p class="text-muted mb-2"><%= product.category %></p>
                                            <p class="card-text text-center mb-2"><%= product.description %></p>
                                            <h6 class="price">Rs <%= product.price %></h6>
                                            <div class="d-flex justify-content-center align-items-center">
                                                <button class="btn btn-light qty-btn">-</button>
                                                <input type="text" value="1" class="form-control qty-input text-center mx-2">
                                                <button class="btn btn-light qty-btn">+</button>
                                            </div>
                                            <form method="POST" action="/cart/add-to-cart/<%= product._id %>">
                                                <input type="hidden" name="quantity" value="1">
                                                <button type="submit" class="btn btn-primary mt-3">Add to Cart</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('cart') %>

        <script src="/js/cartQuantityControl.js"></script>
    </div>
</div>
