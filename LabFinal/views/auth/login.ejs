<div class="form-box text-center">
    <h2>Login</h2>
    <form action="/login" method="POST" onsubmit="return true">
        <div class="input-group mb-4 mt-3">
            <span class="input-group-text"><i class="fa fa-user"></i></span>
            <input type="text" name="username" class="form-control" placeholder="Username" required>
            <div id="username-error" class="error-message"></div>
        </div>
        <div class="input-group mb-4">
            <span class="input-group-text"><i class="fa fa-lock"></i></span>
            <input type="password" name="password" class="form-control" placeholder="Password" required>
            <div id="password-error" class="error-message"></div>
        </div>

        <% if (typeof error !== 'undefined') { %>
            <div class="error-message" style="color: red;">
                <p><%= error %></p>
            </div>
        <% } %>

        <div class="text-end mb-3">
            <a href="#" class="text-decoration-none text-secondary">Forgot password?</a>
        </div>
        <button type="submit" class="btn btn-gradient w-100">LOGIN</button>
    </form>
    <p class="mt-3 mb-1 text-secondary">Or Sign Up Using</p>
    <div class="social-icons">
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-google"></i></a>
    </div>
    <p class="text-secondary mt-2">Or Sign Up Using</p>
    <a href="/register" class="a-sign fw-bold text-decoration-none">SIGN UP</a>
</div>
